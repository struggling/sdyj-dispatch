
.header {
	margin: 90rpx 0 90rpx 50rpx;
	border-bottom: 1px solid #ccc;
	text-align: center;
	width: 650rpx;
	height: 300rpx;
	line-height: 450rpx;
}
.header image {
	width: 300rpx;
	height: 200rpx;
}
.content {
	margin-left: 50rpx;
	margin-bottom: 90rpx;
}
.content text {
	display: block;
	color: #9d9d9d;
	margin-top: 40rpx;
}
button{
	-webkit-appearance:none;
	border: none;
	height: 80rpx;
	line-height: 80rpx;
	background: -webkit-linear-gradient(left, #00ABEB, #54C3F1);
	background: linear-gradient(90deg, #00ABEB, #54C3F1);
	border-radius: 21rpx;
}
button::after{
	border: none;
}
.bottom {
	border-radius: 80rpx;
	margin: 70rpx 50rpx;
	font-size: 35rpx;
}

