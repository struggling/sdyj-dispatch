  height: 680rpx;
  width: 100%;
}
.content {
  margin-top: 80rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
}
.content .top {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  font-size: 40rpx;
  font-weight: bold;
}
.content .top .score {
  color: #2967FF;
}
.content .detail {
  color: #232628;
  font-size: 26rpx;
  margin-top: 60rpx;
  margin-bottom: 60rpx;
  overflow: hidden;
  height: 200rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  line-height: 50rpx;
}
.btn {
  padding: 20rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-top: 1rpx solid #d0d0d0;
  position: fixed;
  bottom: 0;
}
.btn .kefu {
  color: #666666;
}
.btn .duihuan {
  margin-left: 80rpx;
  width: 536rpx;
  height: 80rpx;
