
.img-video-list {
	padding: 20rpx;
	border-bottom: 1rpx solid;
}
.avatar {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.avatar>view:first-child {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	color: #929292;
}
.avatar>view:first-child image {
	width: 90rpx;
	height: 90rpx !important;
	border-radius: 50%;
	margin-right: 10rpx;
}
.avatar>view:last-child {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	background-color: #f4f4f4;
	border-radius: 5rpx;
}
.img-video-title {
	padding: 15rpx 0;
	font-size: 32rpx;
}
.img-video {
	position: relative;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	/* text-align: center; */
}
.img-video .video-play {
	position: absolute;
	/* background-color: rgba(51,51,51,0.72); */
	color: #FFFFFF;
	font-size: 140rpx;
}
.img-video .video-play-info {
	position: absolute;
	background-color: rgba(51, 51, 51, 0.72);
	color: #FFFFFF;
	bottom: 8rpx;
	right: 8rpx;
	border-radius: 40rpx;
	font-size: 22rpx;
	padding: 0 10rpx;
}
.img-video>image {
	width: 100%;
	border-radius: 20rpx;
}
.Commentaries {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	padding: 15rpx 0;
	color: #999999;
}
.Commentaries>view:first-child {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.Commentaries>view:last-child {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.Commentaries>view>view {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	margin-right: 15rpx;
}
.Commentaries>view>view>view {
	margin-right: 15rpx;
}
.active {
	color: #4130ff;
}

